@model IEnumerable<Kundbolaget.Models.EntityModels.CustomerGroup>

@{
    ViewBag.Title = "Kundbolget-Kundgrupp";
}

<h2>Kundgrupp</h2>

<p>
    @Html.ActionLink("Skapa ny", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Ändra", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Info kundgrupp", "Details", new { id = item.Id }) |
                @Html.ActionLink("Ta Bort", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
