@model Kundbolaget.Models.ViewModels.OrderUploadVM
@{
    ViewBag.Title = "Kundbolaget-Beställning";
}

<h2>Orderfil</h2>

@using (Html.BeginForm("UploadJson", "JsonFile", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Skicka en json-fil</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-offset-2 col-md-12">
                <p>
                    @Html.TextBoxFor(model => model.File, new { type = "file" })
                </p>
                <p>
                    @Html.ValidationMessageFor(model => model.File)
                </p>
                <p>
                    <button type="submit" value="Ladda upp filen" class="btn btn-primary">
                        <span class="glyphicon glyphicon-upload" aria-hidden="true"> </span> Ladda upp filen
                    </button>
                </p>
                <p>
                    @*@Html.ValidationMessage("SimilarOrder", new { @class = "text-danger" })
                    @Html.ValidationMessage("CustomerAddress", new { @class = "text-danger" })*@
                </p>
            </div>

        </div>
    </div>
}

<div>
    <a href="@Url.Action("Index")" class="btn btn-default">
    <span class="glyphicon glyphicon-circle-arrow-left" aria-hidden="true"> </span> Tillbaka
</a>
    @*@Html.ActionLink("Tillbaka", "Index")*@
</div>